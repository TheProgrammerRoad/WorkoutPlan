<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100">

        <ImageView
            android:id="@+id/iVUebung"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="50"
            android:clickable="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="0dp"
                android:background="@drawable/edit_text_drawable"
                android:layout_weight="25"/>

            <EditText
                android:id="@+id/etEinstellungen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="0dp"
                android:background="@drawable/edit_text_drawable"
                android:layout_weight="25"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="25"
                android:weightSum="100">

                <EditText
                    android:id="@+id/etkg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"
                    />

                <EditText
                    android:id="@+id/etkg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/etkg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/etkg4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="25"
                android:weightSum="100">

                <EditText
                    android:id="@+id/etwdh1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:textSize="15dp"
                    android:padding="0dp"/>

                <EditText
                    android:id="@+id/etwdh2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/etwdh3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/etwdh4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@drawable/edit_text_drawable"
                    android:padding="0dp"
                    android:textSize="15dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnAddNewExcercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="45"
        android:text="Neue Übung eintragen" />

    <Button
        android:id="@+id/btnFromEnterNewExcerciseToMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="45"
        android:text="Zurück zur Übungsliste" />


</LinearLayout>